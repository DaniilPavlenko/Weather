<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<TextView
		android:id="@+id/info_window_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:textSize="@dimen/info_window_city_text_size"
		android:textStyle="bold"
		android:drawableStart="@drawable/weather_icon_01"
		android:drawableLeft="@drawable/weather_icon_01"
		tools:text="Ростов-на-Дону"/>
	<TextView
		android:id="@+id/info_window_snippet"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:text="Детали погоды"/>
</LinearLayout>