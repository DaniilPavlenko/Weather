<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		tools:context=".CityDetailFragment"
		android:paddingTop="@dimen/padding"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:id="@+id/linearLayout2"
		app:layout_constraintBottom_toTopOf="@+id/close_button">
		<TextView
			android:drawableStart="@drawable/weather_icon_02"
			android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/city_detail_temperature"
			tools:text="+18"
			android:textSize="24sp"
			android:drawableLeft="@drawable/weather_icon_02"
			android:gravity="center"
			android:drawablePadding="@dimen/padding_small"/>
		<TextView
			android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/city_detail_title"
			tools:text="Город"
			android:textSize="24sp"/>
		<LinearLayout
			android:layout_gravity="center_horizontal"
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/padding"
			android:gravity="center">
			<TextView
				android:id="@+id/city_detail_wind"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/cityNameColor"
				tools:text="Ветер: 8 м/с"
				style="@style/CityDetailInfo"
				android:padding="0dp"/>
			<TextView
				android:id="@+id/city_detail_cloudy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/cityNameColor"
				style="@style/CityDetailInfo"
				tools:text="Облачность: 40%"/>
			<TextView
				android:id="@+id/city_detail_humidity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/cityNameColor"
				style="@style/CityDetailInfo"
				tools:text="Влажность: 15%"/>
			<TextView
				android:id="@+id/city_detail_pressure"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/cityNameColor"
				style="@style/CityDetailInfo"
				tools:text="Давление: 1040 мм"/>
		</LinearLayout>
	</LinearLayout>
	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/close_button"
		android:text="@string/close"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:background="@color/colorPrimary"
		android:textColor="@color/white"/>
</android.support.constraint.ConstraintLayout>